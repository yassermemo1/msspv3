# Test Environment Configuration
NODE_ENV=test
PORT=5002

# Test Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mssp_test

# Test Authentication
JWT_SECRET=test-jwt-secret-key-for-testing-only
SESSION_SECRET=test-session-secret-key-for-testing-only

# Test LDAP Configuration (disabled for tests)
LDAP_ENABLED=false

# Test Email Configuration (use mock)
EMAIL_ENABLED=false
EMAIL_FROM=test@mssp.local

# Test File Upload
UPLOAD_DIR=./test-uploads
MAX_FILE_SIZE=10485760

# Test Redis (optional, can use in-memory)
REDIS_URL=

# Test Logging
LOG_LEVEL=error
LOG_FILE=./logs/test.log
