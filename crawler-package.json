{
  "name": "web-crawler-error-checker",
  "version": "1.0.0",
  "description": "Playwright-based web crawler to check for HTTP errors",
  "main": "crawl-check-errors.ts",
  "scripts": {
    "crawl": "ts-node crawl-check-errors.ts",
    "crawl:headed": "ts-node crawl-check-errors.ts --headed",
    "build": "tsc crawl-check-errors.ts --outDir dist",
    "crawl:js": "node dist/crawl-check-errors.js"
  },
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
} 